<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Climate Solutions</title>
  <link rel="stylesheet" href="/css/main.css" />
</head>

<body tabindex="-1">

  <!-- Include navbar with page set to the current project (use the project's title or ID) -->
  <%- include('partials/navbar', { page: '/solutions/projects' }) %>

  <br />

  <div class="container mx-auto">

    <!-- Hero section displaying the project's title and a description -->
    <div class="hero bg-base-200 rounded-lg p-6">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <h1 class="text-5xl font-bold"><%= project.title %></h1> <!-- Project Title -->
          <p class="py-6">Below, you will find detailed information about the project: <%= project.title %></p> <!-- Blurb -->
        </div>
      </div>
    </div>

    <br />

    <!-- Display project image, short intro, and impact -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <img class="w-full rounded-lg" src="<%= project.feature_img_url %>" alt="<%= project.title %> Image" /> <!-- Project Image -->
      </div>
      <div class="prose">
        <h2>Introduction</h2>
        <p><%= project.intro_short %></p> <!-- Short Intro -->

        <h2>Impact</h2>
        <p><%= project.impact %></p> <!-- Project Impact -->

        <h2>Learn More</h2>
        <a href="<%= project.original_source_url %>" class="btn btn-primary">Find More Information</a> <!-- Link to More Info -->
      </div>
    </div>

    <br />

    <!-- Add quote fetched via AJAX -->
    <div class="quote-section">
      <h2>Random Quote</h2>
      <blockquote id="quote"></blockquote> <!-- Quote Display -->
      <footer id="author"></footer> <!-- Author of the quote -->
    </div>

    <br />

    <!-- Back button to return to the previous page -->
    <a href="#" onclick="history.back(); return false;" class="btn btn-secondary">Back</a>

  </div>

  <!-- Script to fetch and display random quote -->
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      // Fetch the random quote data
      fetch('https://dummyjson.com/quotes/random')
        .then(response => response.json())
        .then(data => {
          // Update the DOM with the quote and author
          document.getElementById('quote').textContent = `"${data.quote}"`;
          document.getElementById('author').textContent = `- ${data.author}`;
        })
        .catch(error => console.error('Error fetching quote:', error));
    });
  </script>

</body>

</html>
